	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="gerenciador">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.danilloparreira.gerenciador.model.*</class>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL95Dialect" />
			<property name="hibernate.connection.driver_class"
				value="org.postgresql.Driver" />
			<property name="hibernate.connection.url"
				value="postgres://rwebgimyulkqto:e2558552a45a120bfcafe1d25c6375c1a1a786cf94e837a34af19cc29ef9eca4@ec2-34-192-30-15.compute-1.amazonaws.com:5432/d9uh6fgmqa7fss" />
			<!-- value="jdbc:postgresql://localhost:5432/gerenciador" /> -->
			<property name="hibernate.connection.username"
				value="rwebgimyulkqto" />
			<!-- value="postgres" /> -->
			<property name="hibernate.connection.password"
				value="e2558552a45a120bfcafe1d25c6375c1a1a786cf94e837a34af19cc29ef9eca4" />
